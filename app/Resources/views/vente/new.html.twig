{% extends 'layout.html.twig' %}

{% block container %}
     
    <header class="bg-image bg-image-2 well-inset-3">
        <section class="well well-sm well-sm--inset-2">
            <div class="container text-center">
                <div class="row ">
                    <div class="col-md-6 col-md-offset-3 btn-shadow inset-sm-min bg-white round-large">
                        <h5 class="text-center">{{ 'Ajouter votre offre'|trans() }}</h5>
                        {{ form_start(form, {'method': 'POST', 'action': path('vente_new'), 'attr':{'class': 'row label-insets'}}) }}
                        <div class="alert alert-danger">Tous les champs sont obligatoires</div>

                        <div class="form-group col-sm-6 ">

                            {{ form_label(form.product.name, label|default(null), { 'label_attr': { 'class': 'font-secondary' } }) }}
                            {{ form_widget(form.product.name, {'attr' : {'class' : 'form-control'}} )}}
                            {{ form_errors(form.product.name) }}
                        </div> 
                        <div class="form-group col-sm-6 ">

                            {{ form_label(form.product.category, label|default(null), { 'label_attr': { 'class': 'font-secondary' } }) }}
                            {{ form_widget(form.product.category, {'attr' : {'class' : 'form-control'}} )}}
                            {{ form_errors(form.product.category) }}
                        </div> 

                        <div class="form-group col-sm-6 ">
                            {{ form_label(form.quantite, label|default(null), { 'label_attr': { 'class': 'font-secondary' } }) }}
                            {{ form_widget(form.quantite, {'attr' : {'class' : 'form-control'}} )}}
                            {{ form_errors(form.quantite) }}
                        </div> 
                        
                        <div class="form-group col-sm-6 ">
                            {{ form_label(form.uniteMesure, label|default(null), { 'label_attr': { 'class': 'font-secondary' } }) }}
                            {{ form_widget(form.uniteMesure, {'attr' : {'class' : 'form-control'}} )}}
                            {{ form_errors(form.uniteMesure) }}
                        </div> 
                        
                        {#
                        <div class="form-group col-sm-6 ">
                            {{ form_label(form.dateLimit, label|default(null), { 'label_attr': { 'class': 'font-secondary' } }) }}
                            {{ form_widget(form.dateLimit, {'attr' : {'class' : 'form-control'}} )}}
                            {{ form_errors(form.dateLimit) }}
                        </div> 
                        #}
                        <div class="form-group col-sm-6 ">
                            {{ form_label(form.prixUnit, label|default('Prix unitaire'), { 'label_attr': { 'class': 'font-secondary' } }) }}
                            {{ form_widget(form.prixUnit, {'attr' : {'class' : 'form-control'}} )}}
                            {{ form_errors(form.prixUnit) }}
                        </div> 

                        <div class="form-group">
                            {{ form_label(form.description, label|default(null), { 'label_attr': { 'class': 'font-secondary' } }) }}
                            {{ form_widget(form.description, {'attr' : {'class' : 'form-control'}} )}}
                            {{ form_errors(form.description) }}
                        </div> 
                        <div class="form-group col-sm-6 ">
                            {{ form_widget(form.province, {'attr' : {'class' : 'form-control'}} )}}
                            {{ form_errors(form.province) }}
                        </div> 
                        <div class="form-group col-sm-6 ">
                            {{ form_widget(form.city, {'attr' : {'class' : 'form-control'}} )}}
                            {{ form_errors(form.city) }}
                        </div> 
                        

                        <div class="form-group col-sm-6 ">
                            {{ form_label(form.lieu, label|default('Quartier/Village'), { 'label_attr': { 'class': 'font-secondary' } }) }}
                            {{ form_widget(form.lieu, {'attr' : {'class' : 'form-control'}} )}}
                            {{ form_errors(form.lieu) }}
                        </div> 

                        
                        <div class="form-group">
                            {{ form_label(form.imageFile, label|default('Image'), { 'label_attr': { 'class': 'font-secondary' } }) }}
                            {{ form_widget(form.imageFile, {'attr' : {'class' : 'form-control'}} )}}
                            {{ form_errors(form.imageFile) }}
                        </div> 
                        
                        <button class="btn btn-primary btn-xs round-xl btn-block form-el-offset-1" type="submit">Ajouter</button>

                        {{ form_end(form) }}
                    </div>
                </div>
                <a class="btn btn-default btn-sm round-xl offset-2" href="{{ path('vente_index') }}">Retour au march√©</a>
                
            </div>
        </section>
            <!--End section-->
    </header>             
            
{% endblock %}
{% block javascripts %}
{{ parent() }}
<script>
require(['ventes/new']);
</script>  
{% endblock %}
